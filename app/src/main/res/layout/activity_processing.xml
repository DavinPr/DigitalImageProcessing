<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/slate_grey"
    tools:context=".views.processing.ProcessingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/processing_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:elevation="10dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/processing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/img_process"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        />

    <include
        layout="@layout/processing_options"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        />


</LinearLayout>